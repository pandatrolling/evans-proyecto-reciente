<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginVertical="3dp"
    android:weightSum="10"
    tools:targetApi="o">
    <ImageView
        android:id="@+id/drccv_image_view_profile"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_marginHorizontal="15dp"
        android:layout_height="match_parent"
        android:src="@drawable/logo1"
        android:scaleType="fitXY"
        tools:targetApi="o" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:singleLine="true"
            android:id="@+id/drccv_text_view_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Oscar Molleapaza"
            android:alpha="0.8"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/drccv_text_view_chat_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"

            android:textSize="12sp"
            android:layout_below="@+id/drccv_text_view_username"
            android:singleLine="true"
            android:text="Hola como estas apurate que  ya no aguanto mas a"
            android:alpha="0.5"
            />
        <View
            android:layout_alignBottom="@id/drccv_text_view_chat_text"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>